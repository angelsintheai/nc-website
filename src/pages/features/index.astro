---
import Layout from '../../layouts/Layout.astro';

const features = [
  {
    slug: 'scanner',
    icon: 'ðŸ“Š',
    title: 'Project Health Scanner',
    status: 'v0.99 Beta - Q4 2025',
    description: 'Comprehensive project analysis in 30 seconds. Scan documentation health, technical debt, test coverage, and requirements alignment.',
    highlights: [
      'Four-dimension health scoring',
      'Actionable recommendations',
      'Historical trend tracking',
      'Export-ready reports',
    ],
  },
  {
    slug: 'coordinator',
    icon: 'ðŸ¤–',
    title: 'AI Project Coordinator',
    status: 'v2.0 - Q3 2026',
    description: 'Multi-agent orchestration that manages Claude Code sessions intelligently. Automatic context injection and session persistence.',
    highlights: [
      'Multi-agent coordination',
      'Session state persistence',
      'Automatic context injection',
      'Cross-session memory',
    ],
  },
  {
    slug: 'product-manager',
    icon: 'ðŸŽ¯',
    title: 'AI Product Manager',
    status: 'v3.0 - Q1 2027',
    description: 'Autonomous project management with stakeholder communication, sprint planning, and requirement tracking.',
    highlights: [
      'Automated sprint planning',
      'Stakeholder reporting',
      'Roadmap generation',
      'Risk assessment',
    ],
  },
