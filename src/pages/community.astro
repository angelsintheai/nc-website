    title: 'Newsletter',
    description: 'Monthly updates on NC development and AI dev tools',
    href: '#newsletter',
    cta: 'Subscribe',
  },
];
---

<Layout title="Community - Neural Commander">
  <section class="pt-32 pb-20 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <h1 class="text-4xl sm:text-5xl font-bold text-white mb-6">
          Join the <span class="gradient-text">Community</span>
        </h1>
        <p class="text-xl text-nc-light/80 max-w-2xl mx-auto">
          Connect with developers using Neural Commander to build better software.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto mb-16">
        {links.map((link) => (
          <a
            href={link.href}
            class="bg-nc-dark rounded-2xl p-6 border border-white/10 hover:border-nc-blue/50 transition-colors group"
            target={link.href.startsWith('http') ? '_blank' : undefined}
            rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
          >
            <div class="text-4xl mb-4">{link.icon}</div>
            <h2 class="text-white font-bold text-xl mb-2 group-hover:text-nc-blue-light transition-colors">
              {link.title}
            </h2>
            <p class="text-nc-light/70 mb-4">{link.description}</p>
            <span class="text-nc-blue-light font-medium">
              {link.cta} â†’
            </span>
          </a>
        ))}
      </div>

      <!-- Newsletter Signup -->
      <div id="newsletter" class="bg-gradient-to-br from-nc-blue/10 to-nc-blue/10 rounded-2xl p-12 border border-white/10 text-center max-w-2xl mx-auto">
        <h2 class="text-2xl font-bold text-white mb-4">Stay Updated</h2>
        <p class="text-nc-light/80 mb-8">
          Get monthly updates on Neural Commander development, AI dev tools, and community highlights.
        </p>
        <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
          <input
            type="email"
            placeholder="your@email.com"
            class="flex-1 px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white placeholder-nc-light/40 focus:outline-none focus:border-nc-blue"
          />
          <button
            type="submit"
            class="px-6 py-3 rounded-xl bg-nc-blue hover:bg-nc-blue-dark text-white font-semibold transition-colors"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>
  </section>
</Layout>
