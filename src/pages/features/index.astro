---
import Layout from '../../layouts/Layout.astro';

const features = [
  {
    slug: 'scanner',
    icon: 'üìä',
    title: 'Project Health Scanner',
    status: 'v0.99 Beta - Q4 2025',
    description: 'Comprehensive project health audit. Scan documentation health, technical debt, test coverage, and requirements alignment.',
    highlights: [
      'Four-dimension health scoring',
      'Actionable recommendations',
      'Historical trend tracking',
      'Export-ready reports',
    ],
  },
  {
    slug: 'coordinator',
    icon: 'ü§ñ',
    title: 'AI Project Coordinator',
    status: 'v2.0 - Q3 2026',
    description: 'Multi-agent orchestration that manages Claude Code sessions intelligently. Automatic context injection and session persistence.',
    highlights: [
      'Multi-agent coordination',
      'Session state persistence',
      'Automatic context injection',
      'Cross-session memory',
    ],
  },
  {
    slug: 'product-manager',
    icon: 'üéØ',
    title: 'AI Product Manager',
    status: 'v3.0 - Q1 2027',
    description: 'Autonomous project management with stakeholder communication, sprint planning, and requirement tracking.',
    highlights: [
      'Automated sprint planning',
      'Stakeholder reporting',
      'Roadmap generation',
      'Risk assessment',
    ],
  },
];
---

<Layout title="Features - Neural Commander">
  <section class="pt-32 pb-20 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <h1 class="text-4xl sm:text-5xl font-bold text-white mb-6">
          Features that <span class="gradient-text">evolve with you</span>
        </h1>
        <p class="text-xl text-nc-light/80 max-w-2xl mx-auto">
          From project scanning to autonomous management, Neural Commander grows with your needs.
        </p>
      </div>

      <!-- Core vs AI Features -->
      <div class="grid md:grid-cols-2 gap-6 mb-16 max-w-4xl mx-auto">
        <div class="bg-nc-dark rounded-2xl p-6 border border-nc-green/30">
          <h3 class="text-lg font-semibold text-nc-green mb-4">Works Out of the Box</h3>
          <p class="text-nc-light/60 text-sm mb-4">No AI required for core functionality:</p>
          <ul class="space-y-2 text-nc-light/80 text-sm">
            <li class="flex items-center gap-2"><span class="text-nc-green">‚úì</span> Project Health Audits</li>
            <li class="flex items-center gap-2"><span class="text-nc-green">‚úì</span> Session Persistence</li>
            <li class="flex items-center gap-2"><span class="text-nc-green">‚úì</span> Desktop Dashboard</li>
            <li class="flex items-center gap-2"><span class="text-nc-green">‚úì</span> Documentation Scanner</li>
            <li class="flex items-center gap-2"><span class="text-nc-green">‚úì</span> Requirements Tracking</li>
          </ul>
        </div>
        <div class="bg-nc-dark rounded-2xl p-6 border border-nc-blue/30">
          <h3 class="text-lg font-semibold text-nc-blue-light mb-4">Enhanced with AI</h3>
          <p class="text-nc-light/60 text-sm mb-4">Add Ollama (free) or cloud API keys:</p>
          <ul class="space-y-2 text-nc-light/80 text-sm">
            <li class="flex items-center gap-2"><span class="text-nc-blue-light">+</span> <code>ncmd chat</code> Interactive AI</li>
            <li class="flex items-center gap-2"><span class="text-nc-blue-light">+</span> Pattern Extraction</li>
            <li class="flex items-center gap-2"><span class="text-nc-blue-light">+</span> Smart Suggestions</li>
            <li class="flex items-center gap-2"><span class="text-nc-blue-light">+</span> Natural Language Queries</li>
            <li class="flex items-center gap-2"><span class="text-nc-blue-light">+</span> AI Code Analysis</li>
          </ul>
          <a href="/docs/ai-setup" class="inline-block mt-4 text-nc-blue-light hover:text-white text-sm">
            Setup AI ‚Üí
          </a>
        </div>
      </div>

      <!-- AI Guardrails Section -->
      <div class="bg-gradient-to-br from-nc-warning/5 to-nc-warning/10 rounded-2xl p-8 border border-nc-warning/20 mb-16 max-w-4xl mx-auto">
        <div class="flex items-start gap-4 mb-6">
          <span class="text-4xl">üõ°Ô∏è</span>
          <div>
            <h2 class="text-2xl font-bold text-white mb-2">AI Guardrails</h2>
            <p class="text-nc-light/70">
              Automatically generate safety rules for AI coding assistants like Claude Code, Cursor, and Copilot. NC detects your project type and connected systems, then generates appropriate directives to prevent costly mistakes.
            </p>
          </div>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-sm font-semibold text-nc-warning uppercase tracking-wider mb-4">How it works</h3>
            <ol class="space-y-3 text-nc-light/80 text-sm">
              <li class="flex items-start gap-3">
                <span class="flex-shrink-0 w-6 h-6 rounded-full bg-nc-warning/20 text-nc-warning flex items-center justify-center text-xs font-bold">1</span>
                <span>NC scans your project structure</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="flex-shrink-0 w-6 h-6 rounded-full bg-nc-warning/20 text-nc-warning flex items-center justify-center text-xs font-bold">2</span>
                <span>Detects project type (web app, API, trading bot, database, etc.)</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="flex-shrink-0 w-6 h-6 rounded-full bg-nc-warning/20 text-nc-warning flex items-center justify-center text-xs font-bold">3</span>
                <span>Identifies connected systems (Postgres, Redis, Docker, etc.)</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="flex-shrink-0 w-6 h-6 rounded-full bg-nc-warning/20 text-nc-warning flex items-center justify-center text-xs font-bold">4</span>
                <span>Generates safety directives injected into your AI assistant's context</span>
              </li>
            </ol>
          </div>

          <div>
            <h3 class="text-sm font-semibold text-nc-warning uppercase tracking-wider mb-4">Example directives</h3>
            <div class="space-y-2">
              <div class="bg-nc-darker/50 rounded-lg p-3 text-sm font-mono text-nc-light/70">
                "NEVER execute trades without explicit confirmation"
              </div>
              <div class="bg-nc-darker/50 rounded-lg p-3 text-sm font-mono text-nc-light/70">
                "Always verify database connection before migrations"
              </div>
              <div class="bg-nc-darker/50 rounded-lg p-3 text-sm font-mono text-nc-light/70">
                "Check for active connections before container restart"
              </div>
            </div>
          </div>
        </div>

        <p class="text-nc-light/50 text-xs mt-6 text-center">
          Available in all tiers including Community Edition
        </p>
      </div>

      <div class="space-y-12">
        {features.map((feature, index) => (
          <div class={`grid lg:grid-cols-2 gap-12 items-center ${index % 2 === 1 ? 'lg:grid-flow-dense' : ''}`}>
            <div class={index % 2 === 1 ? 'lg:col-start-2' : ''}>
              <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-nc-blue/10 border border-nc-blue/20 mb-4">
                <span class="text-nc-blue-light text-sm font-medium">{feature.status}</span>
              </div>
              <div class="text-5xl mb-4">{feature.icon}</div>
              <h2 class="text-3xl font-bold text-white mb-4">{feature.title}</h2>
              <p class="text-nc-light/80 text-lg mb-6">{feature.description}</p>
              <ul class="space-y-3 mb-8">
                {feature.highlights.map((highlight) => (
                  <li class="flex items-center gap-3">
                    <span class="text-nc-green">‚úì</span>
                    <span class="text-nc-light/80">{highlight}</span>
                  </li>
                ))}
              </ul>
              <a
                href={`/features/${feature.slug}`}
                class="inline-flex items-center text-nc-blue-light hover:text-white transition-colors font-medium"
              >
                Learn more
                <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
            <div class={`bg-nc-dark rounded-2xl p-8 border border-white/10 ${index % 2 === 1 ? 'lg:col-start-1' : ''}`}>
              <div class="aspect-video bg-gradient-to-br from-nc-blue/20 to-nc-blue/20 rounded-xl flex items-center justify-center">
                <span class="text-8xl">{feature.icon}</span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
