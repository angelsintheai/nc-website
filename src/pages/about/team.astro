---
import Layout from '../../layouts/Layout.astro';

const founder = {
  name: 'Bradley Hughes',
  title: 'Founder & CEO',
  bio: `30+ years of experience across software development, governance, and entrepreneurship.
        Former Local Government Councillor (9 years) managing $150M annual budgets and $2B+ in community assets.
        Co-founder of Blockchain Sydney. Now building the persistent intelligence layer for AI-assisted development.`,
  experience: [
    { role: 'Founder', company: 'Artilect Ventures', current: true },
    { role: 'Managing Director', company: 'Isotope Ventures', current: true },
    { role: 'Technical Co-Founder', company: 'Augmentium AI', current: true },
    { role: 'Co-Founder', company: 'Blockchain Sydney', current: false },
    { role: 'Councillor', company: 'Local Government (9 years)', current: false },
  ],
  links: {
    linkedin: 'https://linkedin.com/in/bradleychughes',
    twitter: 'https://twitter.com/angelsintheai',
    github: 'https://github.com/angelsintheai',
  },
};

const advisors = [
  {
    name: 'Hiring',
    role: 'Technical Advisor',
    status: 'Open position',
  },
  {
    name: 'Hiring',
    role: 'Product Advisor',
    status: 'Open position',
  },
];
---

<Layout title="Team - Neural Commander">
  <section class="pt-32 pb-20 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <!-- Hero -->
      <div class="text-center mb-16">
        <h1 class="text-4xl sm:text-5xl font-bold text-white mb-6">
          The <span class="gradient-text">Team</span>
        </h1>
        <p class="text-xl text-nc-light/80 max-w-2xl mx-auto">
          Building the future of AI-assisted development.
        </p>
      </div>

      <!-- Founder -->
      <div class="bg-nc-dark rounded-2xl p-8 border border-white/10 mb-12">
        <div class="grid md:grid-cols-3 gap-8">
          <div class="md:col-span-1">
            <div class="aspect-square bg-gradient-to-br from-nc-blue/20 to-nc-blue/20 rounded-2xl flex items-center justify-center mb-4">
              <div class="text-8xl">üë®‚Äçüíª</div>
            </div>
            <div class="flex justify-center gap-4">
              <a href={founder.links.linkedin} class="text-nc-light/40 hover:text-white transition-colors" target="_blank" rel="noopener noreferrer">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
              <a href={founder.links.twitter} class="text-nc-light/40 hover:text-white transition-colors" target="_blank" rel="noopener noreferrer">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
              <a href={founder.links.github} class="text-nc-light/40 hover:text-white transition-colors" target="_blank" rel="noopener noreferrer">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
            </div>
          </div>
          <div class="md:col-span-2">
            <h2 class="text-2xl font-bold text-white mb-1">{founder.name}</h2>
            <div class="text-nc-blue-light mb-4">{founder.title}</div>
            <p class="text-nc-light/80 mb-6">{founder.bio}</p>
            <h3 class="text-white font-semibold mb-3">Experience</h3>
            <div class="space-y-2">
              {founder.experience.map((exp) => (
                <div class="flex items-center gap-3">
                  <span class={`w-2 h-2 rounded-full ${exp.current ? 'bg-nc-green' : 'bg-nc-light/30'}`}></span>
                  <span class="text-nc-light/80">
                    <span class="text-white">{exp.role}</span> at {exp.company}
                  </span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>

      <!-- Advisors -->
      <div class="mb-20">
        <h2 class="text-2xl font-bold text-white mb-8 text-center">Advisors</h2>
        <div class="grid md:grid-cols-2 gap-6 max-w-2xl mx-auto">
          {advisors.map((advisor) => (
            <div class="bg-nc-dark rounded-2xl p-6 border border-white/10 border-dashed text-center">
              <div class="w-16 h-16 rounded-full bg-white/5 flex items-center justify-center mx-auto mb-4">
                <span class="text-2xl">üë§</span>
              </div>
              <div class="text-white font-semibold">{advisor.name}</div>
              <div class="text-nc-blue-light text-sm">{advisor.role}</div>
              <div class="text-nc-light/40 text-xs mt-2">{advisor.status}</div>
            </div>
          ))}
        </div>
      </div>

      <!-- Join Us -->
      <div class="text-center bg-gradient-to-br from-nc-blue/10 to-nc-blue/10 rounded-2xl p-12 border border-white/10">
        <h2 class="text-2xl font-bold text-white mb-4">Join the Team</h2>
        <p class="text-nc-light/80 mb-8 max-w-xl mx-auto">
          We're building something special. If you're passionate about developer tools and AI,
          we'd love to hear from you.
        </p>
        <a
          href="mailto:careers@neuralcommander.ai"
          class="inline-flex items-center px-8 py-4 rounded-xl bg-nc-blue hover:bg-nc-blue-dark text-white font-semibold text-lg transition-all hover:scale-105"
        >
          Get in Touch
        </a>
      </div>
    </div>
  </section>
</Layout>
