---
import Layout from '../layouts/Layout.astro';

const phases = [
  {
    number: 1,
    name: 'THE FOUNDATION',
    theme: 'Rock-solid CLI with project health scanning',
    target: 'Community Edition',
    timeline: 'v0.98.1 Alpha',
    status: 'complete',
    progress: 100,
    milestones: [
      { name: 'Core Audit System', status: 'complete', items: ['Health Scoring', 'Documentation Check', 'Code Metrics', 'Dependency Scanning'] },
      { name: 'Report Generation', status: 'complete', items: ['JSON/Markdown Export', 'Multi-Project Reports', 'Trend Analysis'] },
      { name: 'AI Integration', status: 'complete', items: ['AI Recommendations (Ollama)', 'AI Guardrails'] },
      { name: 'Performance Optimization', status: 'complete', items: ['Quick Scan Mode (--quick)', 'Markdown Export (-o)', 'Performance SLAs', 'WSL2 Optimization'] },
    ],
  },
  {
    number: 2,
    name: 'THE ACCELERATOR',
    theme: 'Cross-project intelligence + advanced analytics',
    target: 'Pro Edition',
    timeline: 'Q1-Q2 2026',
    status: 'active',
    progress: 15,
    milestones: [
      { name: 'Foundation (Q1)', status: 'in-progress', items: ['Encrypted Backup', 'Custom Alerts', 'Webhook Integrations', 'Usage Analytics'] },
      { name: 'Cross-Project Intelligence (Q2)', status: 'planned', items: ['Project Registry', 'Pattern Extraction', 'Global Learnings', 'Multi-Project Dashboard'] },
      { name: 'Advanced Integrations (Q2)', status: 'planned', items: ['Slack/Discord Notifications', 'MCP Server Complete', 'IDE Plugins'] },
    ],
  },
  {
    number: 3,
    name: 'THE PLATFORM',
    theme: 'Team collaboration + cloud services + enterprise',
    target: 'Team/Enterprise Edition',
    timeline: 'Q3-Q4 2026',
    status: 'future',
    progress: 0,
    milestones: [
      { name: 'Cloud & Sync (Q3)', status: 'future', items: ['NC Cloud Backend', 'Sync Protocol', 'Team Sharing', 'Audit Logging'] },
      { name: 'Team Features (Q3)', status: 'future', items: ['Shared Dashboards', 'Team Health Aggregation', 'Compliance Reports'] },
      { name: 'Enterprise (Q4)', status: 'future', items: ['SSO/SAML Integration', 'On-Premise Deployment', 'Role-Based Access', 'SLA Tooling'] },
    ],
  },
];

const tiers = [
  {
    name: 'Community',
    price: 'Free',
    features: [
      { name: 'Full CLI functionality', included: true },
      { name: 'Project health scanning', included: true },
      { name: 'NC Desktop app*', included: true },
      { name: 'AI Writing Assistant*', included: true },
      { name: 'AI Guardrails**', included: true },
      { name: 'AI recommendations (Ollama)', included: true },
      { name: 'CI/CD plugins', included: true },
      { name: 'BYOK (OpenAI/Anthropic)', included: false },
      { name: 'Unlimited projects', included: false },
      { name: 'Cross-project intelligence (Q2 2026)', included: false },
      { name: 'Team dashboards (Q3 2026)', included: false },
    ],
  },
  {
    name: 'Pro',
    price: '$12/user/mo',
    features: [
      { name: 'Full CLI functionality', included: true },
      { name: 'Project health scanning', included: true },
      { name: 'NC Desktop app*', included: true },
      { name: 'AI Writing Assistant*', included: true },
      { name: 'AI Guardrails**', included: true },
      { name: 'AI recommendations (Ollama)', included: true },
      { name: 'CI/CD plugins', included: true },
      { name: 'BYOK (OpenAI/Anthropic)', included: true },
      { name: 'Unlimited projects', included: true },
      { name: 'Cross-project intelligence (Q2 2026)', included: true },
      { name: 'Team dashboards (Q3 2026)', included: false },
    ],
  },
  {
    name: 'Team',
    price: '$10/user/mo',
    features: [
      { name: 'Full CLI functionality', included: true },
      { name: 'Project health scanning', included: true },
      { name: 'NC Desktop app*', included: true },
      { name: 'AI Writing Assistant*', included: true },
      { name: 'AI Guardrails**', included: true },
      { name: 'AI recommendations (Ollama)', included: true },
      { name: 'CI/CD plugins', included: true },
      { name: 'BYOK (OpenAI/Anthropic)', included: true },
      { name: 'Unlimited projects', included: true },
      { name: 'Cross-project intelligence (Q2 2026)', included: true },
      { name: 'Team dashboards (Q3 2026)', included: true },
    ],
  },
];
---

<Layout title="Roadmap - Neural Commander">
  <!-- Hero -->
  <section class="pt-32 pb-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto text-center">
      <h1 class="text-4xl sm:text-5xl font-bold text-white mb-6">
        Product <span class="gradient-text">Roadmap</span>
      </h1>
      <p class="text-xl text-nc-light/80 max-w-2xl mx-auto mb-8">
        Follow our journey from CLI tool to full developer intelligence platform.
      </p>

      <!-- Current Status Badge -->
      <div class="inline-flex items-center gap-3 px-6 py-3 rounded-2xl bg-nc-green/10 border border-nc-green/30">
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 bg-nc-green rounded-full"></span>
          <span class="text-nc-green font-semibold">Phase 1: Complete</span>
        </div>
        <span class="text-nc-light/60">|</span>
        <span class="text-nc-warning font-bold">Phase 2: In Progress</span>
      </div>
    </div>
  </section>

  <!-- Phase Timeline -->
  <section class="py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
      <div class="flex items-center justify-between mb-8">
        {phases.map((phase, index) => (
          <div class="flex-1 relative">
            <div class="flex flex-col items-center">
              <div class={`w-16 h-16 rounded-full flex items-center justify-center text-2xl font-bold ${
                phase.status === 'active' ? 'bg-nc-warning text-nc-darker' :
                phase.status === 'planned' ? 'bg-nc-green/20 text-nc-green border-2 border-nc-green/50' :
                'bg-white/10 text-nc-light/60 border-2 border-white/20'
              }`}>
                {phase.number}
              </div>
              <div class="mt-3 text-center">
                <div class={`font-semibold ${phase.status === 'active' ? 'text-nc-warning' : 'text-white'}`}>
                  {phase.name}
                </div>
                <div class="text-nc-light/60 text-sm">{phase.timeline}</div>
              </div>
            </div>
            {index < phases.length - 1 && (
              <div class="absolute top-8 left-1/2 w-full h-0.5 bg-white/10">
                <div class={`h-full ${phase.status === 'active' ? 'bg-nc-warning' : ''}`} style={`width: ${phase.progress}%`}></div>
              </div>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Phase Cards -->
  <section class="py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto space-y-8">
      {phases.map((phase) => (
        <div class={`rounded-2xl p-8 border ${
          phase.status === 'active' ? 'bg-nc-warning/5 border-nc-warning/30' :
          phase.status === 'planned' ? 'bg-nc-green/5 border-nc-green/20' :
          'bg-nc-dark border-white/10'
        }`}>
          <div class="flex flex-col lg:flex-row lg:items-start gap-6">
            <div class="flex-1">
              <div class="flex items-center gap-3 mb-4">
                <span class={`px-3 py-1 rounded-full text-sm font-medium ${
                  phase.status === 'active' ? 'bg-nc-warning/20 text-nc-warning' :
                  phase.status === 'planned' ? 'bg-nc-green/20 text-nc-green' :
                  'bg-white/10 text-nc-light/60'
                }`}>
                  Phase {phase.number}
                </span>
                {phase.status === 'active' && (
                  <span class="px-3 py-1 rounded-full bg-nc-warning text-nc-darker text-sm font-bold">
                    CURRENT
                  </span>
                )}
              </div>
              <h2 class="text-2xl font-bold text-white mb-2">{phase.name}</h2>
              <p class="text-nc-light/70 mb-4">{phase.theme}</p>
              <div class="text-sm text-nc-light/60">
                <span class="font-medium text-nc-light/80">Target:</span> {phase.target}
              </div>
            </div>

            {phase.status === 'active' && (
              <div class="lg:w-48">
                <div class="text-sm text-nc-light/60 mb-2">Progress</div>
                <div class="h-3 bg-white/10 rounded-full overflow-hidden">
                  <div class="h-full bg-nc-warning rounded-full" style={`width: ${phase.progress}%`}></div>
                </div>
                <div class="text-right text-nc-warning font-bold mt-1">{phase.progress}%</div>
              </div>
            )}
          </div>

          <div class="mt-8 grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
            {phase.milestones.map((milestone) => (
              <div class="bg-white/5 rounded-xl p-4">
                <div class="flex items-center gap-2 mb-3">
                  {milestone.status === 'complete' && <span class="text-nc-green">✓</span>}
                  {milestone.status === 'in-progress' && <span class="text-nc-warning animate-pulse">●</span>}
                  {(milestone.status === 'planned' || milestone.status === 'future') && <span class="text-nc-light/40">○</span>}
                  <span class="font-semibold text-white">{milestone.name}</span>
                </div>
                <ul class="space-y-1">
                  {milestone.items.map((item) => (
                    <li class="text-nc-light/60 text-sm flex items-center gap-2">
                      <span class="w-1 h-1 bg-nc-light/40 rounded-full"></span>
                      {item}
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Tier Matrix -->
  <section class="py-12 px-4 sm:px-6 lg:px-8 bg-nc-dark/50">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-2xl font-bold text-white mb-8 text-center">Feature Availability by Tier</h2>

      <div class="overflow-x-auto">
        <table class="w-full">
          <thead>
            <tr class="border-b border-white/10">
              <th class="text-left p-4 text-nc-light/60 font-medium">Feature</th>
              {tiers.map((tier) => (
                <th class="p-4 text-center">
                  <div class="text-white font-semibold">{tier.name}</div>
                  <div class="text-nc-light/60 text-sm">{tier.price}</div>
                </th>
              ))}
            </tr>
          </thead>
          <tbody>
            {tiers[0].features.map((_, featureIndex) => (
              <tr class="border-b border-white/5">
                <td class="p-4 text-nc-light/80">{tiers[0].features[featureIndex].name}</td>
                {tiers.map((tier) => (
                  <td class="p-4 text-center">
                    {tier.features[featureIndex].included ? (
                      <span class="text-nc-green text-lg">✓</span>
                    ) : (
                      <span class="text-nc-light/30">—</span>
                    )}
                  </td>
                ))}
              </tr>
            ))}
          </tbody>
        </table>
      </div>

      <div class="text-center mt-6 space-y-2">
        <p class="text-nc-light/50 text-xs">* Limited to 1 project in Community tier</p>
        <p class="text-nc-light/50 text-xs">** AI Guardrails automatically generate safety rules for AI coding assistants</p>
        <a href="/pricing" class="text-nc-blue-light hover:text-white text-sm block mt-4">
          View full pricing details →
        </a>
      </div>
    </div>
  </section>

  <!-- Community CTA -->
  <section class="py-20 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-2xl font-bold text-white mb-4">Want to Influence the Roadmap?</h2>
      <p class="text-nc-light/70 mb-8">
        We build in public and prioritize based on community feedback. Join the conversation!
      </p>
      <div class="flex flex-wrap items-center justify-center gap-4">
        <a
          href="/community"
          class="inline-flex items-center px-6 py-3 rounded-xl bg-nc-blue hover:bg-nc-blue-dark text-white font-semibold transition-colors"
        >
          Join Community
        </a>
        <a
          href="https://github.com/neural-commander/nc/discussions"
          target="_blank"
          rel="noopener"
          class="inline-flex items-center px-6 py-3 rounded-xl bg-white/5 hover:bg-white/10 text-white font-semibold border border-white/10 transition-colors"
        >
          GitHub Discussions
        </a>
        <a
          href="/waitlist"
          class="inline-flex items-center px-6 py-3 rounded-xl bg-white/5 hover:bg-white/10 text-white font-semibold border border-white/10 transition-colors"
        >
          Join Waitlist
        </a>
      </div>
    </div>
  </section>

  <!-- Last Updated -->
  <section class="pb-20 px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto text-center">
      <p class="text-nc-light/40 text-sm">
        Last updated: January 2026 • This roadmap is updated regularly based on community feedback
      </p>
    </div>
  </section>
</Layout>
